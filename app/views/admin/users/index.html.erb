<div class= "container">
  <table class="table table-borderless table-light">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Create At</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      <% @user.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.created_at%></td>
          <td><%= user.email %></td>
          <td><%= link_to 'View Project', admin_user_path(user) , class:"btn btn-secondary" %></td>
          <td> <%= link_to 'Edit', edit_admin_user_path(user) %></td>
          <td><%= link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      All users : <%= @user.count%>     
    </tbody>
  </table>
</div>
