<div class="container">
  <p id="notice"><%= notice %></p>

  <h1 class="text-center">Client Listing</h1>
  <td><%= link_to 'New Client', new_manager_client_path(@clients) , class:"btn btn-danger float-right"%></td>
  <table class="table table-borderless table-light">
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Address</th>
        <th>Phone number</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td><%= client.first_name %></td>
          <td><%= client.last_name %></td>
          <td><%= client.address %></td>
          <td><%= client.phone_number %></td>
          <td><%= client.email %></td>
          <td><%= link_to 'Client Detail', manager_client_path(client) , class:"btn btn-success" %></td>
          <td><%= link_to 'Project Listing', manager_client_projects_path(client),  class:"btn btn-success"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

