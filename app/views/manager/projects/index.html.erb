<h1 class="text-center">Project Listing</h1>
<div class="container">
  <%= link_to 'New Project', new_manager_client_project_path(@client, @project), class:"btn btn-danger float-right" %>
  <table class="table table-borderless table-light">
    <thead>
      <tr>
        <th>Project Title</th>
        <th>Project Description</th>
        <th>Create At</th>
      </tr>
    </thead>
    <tbody>
      <% @project.each do |project| %>
        <tr>
          <td><%= project.name %></td>
          <td><%= project.description %></td>
          <td><%= project.created_at%></td>
          <td><%= link_to 'show', manager_client_project_path(@client, project), class:"btn btn-light" %></td>
          <% if user_signed_in? %>
          <td> <%= link_to 'Edit', edit_manager_client_project_path(@client, project), class:"btn btn-light" %></td>
          <td><%= link_to 'Delete', manager_client_project_path(@client, project), method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-danger"%></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
